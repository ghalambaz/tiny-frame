{
    "name": "ghalambaz/chip-small-framework",
    "description": "Small PHP Framework with FileBase Configuration",
    "keywords": [
        "chip",
        "small",
        "framework",
        "router"
    ],
    "homepage": "http://ali-ghalambaz.ir",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Ghalambaz",
            "email": "a.ghalambaz@gmail.com",
            "homepage": "http://www.ali-ghalambaz.ir"
        }
    ],
    "require": {
        "php": "^7.4",
        "psr/container": "1.0.0",
        "psr/http-message": "1.0.1",
        "psr/http-factory": "1.0.1",
        "psr/http-server-handler": "1.0.1",
        "twig/twig": "^2.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "testCore": "phpunit",
        "testApp": "phpunit"
    }
}
